<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <title>Author Register</title>
</head>
<body class="formContainerBody">
    <!-- Page title -->
    <div class="formContainerTitle">
        <h1>Author Register page</h1>
    </div>
    <!-- Registration form container -->
    <div class="formContainer">
        <form id="registerForm" action="/author/register" method="POST">
            <!-- Name input field -->
            <div>
                <h4>Name: </h4>
                <input id="name" type="text" name="name" required/>
            </div>
            <!-- Username input field -->
            <div class="mt-3">
                <h4>Username: </h4>
                <input id="username" type="text" name="username" required/>
            </div>
            <!-- Password input field -->
            <div class="mt-3">
                <h4>Password: </h4>
                <input id="password" type="password" name="password" required/>
            </div>
            <!-- Password error message -->
            <p id="passwordError" class="error-message" style="display: none;">
                Password must be at least 6 characters long and contain at least one uppercase letter, one lowercase letter, one number, and one special character.
            </p>
            <!-- Submit button -->
            <button type="submit" class="formButton">Register</button>
        </form>
        <!-- Link to login page -->
        <div class="text-center mt-3">
            <p>Already have an account? Click <a href="/author/login" class="link">here</a> to log in.</p>
        </div>
    </div>
    
    <!-- JavaScript for form validation -->
    <script>
        // Display error message if there's an error
        <% if (typeof error !== 'undefined' && error) { %>
            alert("<%= error %>");
        <% } %>

        // Validate password on form submission
        document.getElementById('registerForm').addEventListener('submit', function(event) {
            const password = document.getElementById('password').value;
            // Regular expression to validate password
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*_])[A-Za-z\d!@#$%^&*_]{6,}$/;

            // Check if password meets the required criteria
            if (!passwordRegex.test(password)) {
                event.preventDefault(); // Prevent form submission
                alert("Password must:\n\
                - Include at least one lowercase letter (a-z)\n\
                - Include at least one uppercase letter (A-Z)\n\
                - Contain at least one digit (0-9)\n\
                - Have at least one special character ( ! @ # $ % ^ & * _ )\n\
                - Be at least 6 characters long."); // Display password requirements
            } else {
                return null; // Allow form submission if password is valid
            }
        });
    </script>
</body>
</html>
